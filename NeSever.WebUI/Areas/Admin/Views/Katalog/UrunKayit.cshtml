                    bootstrap: new FormValidation.plugins.Bootstrap({
                        eleInvalidClass: '',
                        eleValidClass: '',
                    })
                }
            }
        ).on('core.form.valid', function () {
            var data = new FormData($('#_form')[0]);
            var totalFiles = document.getElementById("file").files.length;
            for (var i = 0; i < totalFiles; i++) {
                var file = document.getElementById("file").files[i];
                data.append('Resim', file);
            }
            if ($('#Etiketler').val() != "") {
                var arrayEtiket = JSON.parse($('#Etiketler').val());
                var etiketler = "";
                for (var k in arrayEtiket) {
                    etiketler += arrayEtiket[k].value + ',';
                }
                etiketler = etiketler.substring(0, etiketler.length - 1);
                data.append('Etiketler', etiketler);

            }
            if ($('#KategoriListesi').val() != "") {
                var arrayKategori = $('#KategoriListesi').val();
                var kategoriler = "";
                for (var i = 0; i < arrayKategori.length; i++) {
                    kategoriler += arrayKategori[i] + ',';
                }
                kategoriler = kategoriler.substring(0, kategoriler.length - 1);
                data.append('SecilenKategoriler', kategoriler);

            }
            data.append('UrunId', $('#hdnUrunId').val());
            data.append('AktifMi', $('#AktifMi').prop('checked'));
            data.append('SatilabilirUrun', $('#SatilabilirUrun').prop('checked'));

            var aciklamaa = AciklamaEditor.getData();
            var kisaAciklamaa = KisaAciklamaEditor.getData();

            var fiyat = $('#Fiyat').val();       

            var fiyatKontrol = fiyat.replace(/[^a-zA-Z0-9,]/gi, '');

            if (fiyat != fiyatKontrol) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Yanlış Karakter Kullanıldı!',
                    text: 'Fiyat Alanında Yanlış Karakter Kullanıldı(Rakam Haricinde Sadece "," Girilebilir).',
                    showCloseButton: true,
                    confirmButtonText: "Tamam",
                    cancelButtonText: "İptal",
                });
            }
            else if (aciklamaa.length > 5000) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Karakter Sınırı Aşıldı!',
                    text: 'Açıklama Alanına 5000 karakterden fazlası girilemez.',
                    showCloseButton: true,
                    confirmButtonText: "Tamam",
                    cancelButtonText: "İptal",
                });
            }
            else if (kisaAciklamaa.length > 250)
            {
                Swal.fire({
                    icon: 'warning',
                    title: 'Karakter Sınırı Aşıldı!',
                    text: 'KısaAçıklama Alanına 250 karakterden fazlası girilemez.',
                    showCloseButton: true,
                    confirmButtonText: "Tamam",
                    cancelButtonText: "İptal",
                });
            }
            /*else if (fiyat.indexOf(".") > -1) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Yanlış Karakter Kullanıldı!',
                    text: 'Fiyat Alanına "." karakteri yerine "," kullanılmalıdır!',
                    showCloseButton: true,
                    confirmButtonText: "Tamam",
                    cancelButtonText: "İptal",
                });
            }*/
            else {
                data.append('AciklamaContent', AciklamaEditor.getData());
                data.append('KisaAciklamaContent', KisaAciklamaEditor.getData());
                $.ajax({
                    type: "post",
                    url: "/Admin/Katalog/UrunKayit",
                    data: data,
                    contentType: false,
                    processData: false,
                    beforeSend: function () {
                        showLoading('_form');
                    },
                    success: function (result) {
                        hideLoading('_form');


                        if (result.id > 0) {
                            $('#hdnUrunId').val(result.id);

                            if (result.operation == "insert") {
                                $("#btnKaydet").removeClass('btn-primary');
                                $("#btnKaydet").addClass('btn-success');
                                $("#btnKaydet").html('Güncelle');
                                window.history.pushState("", "", "UrunKayit/" + result.id);
                            }

                            Swal.fire({
                                icon: 'success',
                                title: 'İşlem Başarılı!',
                                text: '',
                                showCloseButton: true,
                                confirmButtonText: "Tamam",
                                cancelButtonText: "İptal",
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'error',
                                title: 'İşlem Sırasında Hata Oluştu!',
                                text: '',
                                showCloseButton: true,
                                confirmButtonText: "Tamam",
                                cancelButtonText: "İptal",
                            });
                        }
                    },

                    error: function (err) {
                        hideLoading('_form');

                        Swal.fire(
                            "Hata",
                            "İşlem sırasında hata oluştu. " + err,
                            "error"
                        )
                    }
                });
            }            
        });

        function ResimSil(resimId) {
            $.ajax({
                url: '/Admin/Katalog/UrunResimSil',
                data: { Id: resimId },
                dataType: "json",
                type: "Get",
                success: function (resultData) {
                    if (resultData.length == 0) {
                        $('#fileInputDiv').empty();
                    }
                    else {
                        $('#fileInputDiv').empty();
                        //$('#fileInputDiv ul').remove();

                        $('#fileInputDiv').append('<ul style="list-style-type:circle"');
                        $.each(resultData, function (key, value) {
                            var resim = value.ResimBase64;
                            var urunResimId = value.UrunResimId;
                            $('#fileInputDiv').append('<li class="deneme"><img  style="max-height:200px;max-width:150px" src="data:image/png;base64,' + resim + '"></img><button class="btn btn-lg purple" type="button" onclick="ResimSil(' + urunResimId + ')"><i class="fa fa-times"></i></button></li >');

                        })
                        $('#fileInputDiv').append('</ul');

                    }

                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                    alert(thrownError);
                }
            });
        }
        function showLoading(id) {
            KTApp.block(document.getElementById(id), {
                overlayColor: '#000000',
                state: 'danger',
                message: 'Lütfen bekleyin...'
            });
        };
        function hideLoading(id) {
            KTApp.unblock(document.getElementById(id));
        };
        function readURL(input) {
            $('#emptyFile').remove();
            $('#fileInputDiv').empty();
            $('#fileInputDiv').append('<ul style="list-style-type:circle"');


            for (var i = 0; i < input.files.length; i++) {
                if (input.files[i] && input.files[i]) {
                    var reader = new FileReader();
                    var reader = new FileReader();
                    reader.onload = function (e) {

                        $('#fileInputDiv').append('<li><img  style="max-height:200px;max-width:150px" src="' + e.target.result + '"></img></li>');
                    }
                    reader.readAsDataURL(input.files[i]);
                }

            }
            $('#fileInputDiv').append('</ul');

        }
        $("#file").change(function () {
            readURL(this);
        });
