    ViewData["Title"] = "Kayit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model NeSever.Common.Models.Urun.UrunVM
<div class="d-flex flex-row flex-column-fluid container">
    <div class="main d-flex flex-column flex-row-fluid">
        <div class="subheader py-2 py-lg-4 subheader-transparent" id="kt_subheader">
            <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                <div class="d-flex align-items-center flex-wrap mr-1">
                    <div class="d-flex align-items-baseline flex-wrap mr-5">
                        <h5 class="text-dark font-weight-bold my-1 mr-5">Ürün Kayıt</h5>

                        <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                            <li class="breadcrumb-item">
                                <a href="Admin/Katalog" class="text-muted">Katolog</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/Admin/Katalog/UrunKayit" class="text-muted">Ürün Kayıt</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <a href="#" class="btn btn-icon btn-circle btn-sm btn-light-success mr-1" data-card-tool="reload" onclick="loadPage()">
                        <i class="ki ki-reload icon-nm"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="content flex-column-fluid" id="kt_content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header">
                            <h3 class="card-title">Kayıt Alanları</h3>
                            <div class="card-toolbar">
                                <div class="example-tools justify-content-center">
                                    <span class="example-copy" data-toggle="tooltip" title="" style="visibility:hidden"></span>
                                </div>
                            </div>
                        </div>
                        <form id="_form" method="post" enctype="multipart/form-data">
                            <input id="hdnUrunId" type="hidden" value="@Model.UrunId" />
                            <input id="hdnSecilenKategori" type="hidden"  value="@Model.SecilenKategoriListesi" />
                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label><span class="text-danger">* </span>Ürün Adı:</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="" asp-for="UrunAdi" />
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="la la-bookmark-o"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label><span class="text-danger">* </span>Marka:</label>
                                        <div class="input-group">
                                            <select asp-for="MarkaId" asp-items="@(new SelectList(Model.MarkaListesi,"MarkaId","MarkaAdi"))" class="form-control selectpicker" data-live-search="true">
                                                <option value="" selected>Lütfen Seçiniz</option>
                                            </select>
                                        </div>
                                    </div>


                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label>Kısa Açıklama:</label>
                                        <div class="input-group">
                                            <textarea id="KisaAciklama" asp-for="KisaAciklama"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label>Açıklama:</label>
                                        <div class="input-group">
                                            <textarea id="Aciklama" asp-for="Aciklama"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label>Etiketler:</label>
                                        <div class="input-group">
                                            <input asp-for="Etiketler" class="form-control" placeholder='Etiketleri yazın' pattern='^[A-Za-z_✲ ]{1,15}$' />
                                        </div>
                                    </div>


                                    <div class="col-lg-4">
                                        <label><span class="text-danger">* </span>Sku :</label>
                                        <div class="input-group">
                                            <input type="text" asp-for="Sku" class="form-control" placeholder="" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label><span class="text-danger">* </span>Adres Url :</label>
                                        <div class="input-group">
                                            <input type="text" asp-for="AdresUrl" class="form-control" placeholder="" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label><span class="text-danger">* </span>OriginalId :</label>
                                        <div class="input-group">
                                            <input type="text" asp-for="OriginalId" class="form-control" placeholder="" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label><span class="text-danger">* </span>Anasayfada Gösterilsin Mi?:</label>
                                        <div class="input-group">
                                            <label class="checkbox checkbox-lg">
                                                <input asp-for="AnasayfadaGoster" type="checkbox">
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label><span class="text-danger">* </span>Sıra:</label>
                                        <div class="input-group">
                                            <input class="form-control" type="number" asp-for="Sira" placeholder="0">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="la la-sort-numeric-down"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label>Meta Keywords:</label>
                                        <div class="input-group">
                                            <input type="text" asp-for="MetaKeywords" class="form-control" placeholder="" />
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="la la-map-marker"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label>Meta Description:</label>
                                        <div class="input-group">
                                            <input type="text" asp-for="MetaDescription" class="form-control" placeholder="" />
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="la la-map-marker"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label>Meta Title:</label>
                                        <div class="input-group">
                                            <input type="text" asp-for="MetaTitle" class="form-control" placeholder="" />
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="la la-map-marker"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">

                                    <div class="col-lg-4">
                                        <label>Aktif Mi?:</label>
                                        <div class="input-group">
                                            <input asp-for="AktifMi" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label>Kategori :</label>
                                        <div class="input-group">
                                            <select class="js-example-basic-multiple" multiple="multiple" asp-for="KategoriListesi" asp-items="@(new SelectList(Model.KategoriListesi,"KategoriId","KategoriAdi"))">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label><span class="text-danger">* </span>WebSite:</label>
                                        <div class="input-group">
                                            <select asp-for="WebSiteId" asp-items="@(new SelectList(Model.WebSiteListesi,"WebSiteId","WebSiteAdi"))" class="form-control selectpicker">
                                                <option value="" selected>Lütfen Seçiniz</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-4">
                                        <label>Satılabilir Mi?:</label>
                                        <div class="input-group">
                                            <input asp-for="SatilabilirUrun" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>            
                                    <div class="col-lg-4">
                                        <label>Fiyat:</label>
                                        <div class="input-group">
                                            <input class="form-control" asp-for="Fiyat" step="0.01" placeholder="0">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="la la-sort-numeric-down"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
