                        <div class="tab-pane fade" id="urunBilgileri" role="tabpanel" aria-labelledby="urunBilgileri-tab">

                            <table id="dtUrunDetay" class="table table-bordered table-hover table-checkable">
                                <thead>
                                    <tr>
                                        <th>Resim</th>
                                        <th>Ürün Kodu</th>
                                        <th>Ürün</th>
                                        <th>Adet</th>
                                        <th>KDV Birim Tutarı</th>
                                        <th>KDV Hariç Birim Tutarı</th>
                                        <th>KDV Dahil Birim Tutarı</th>
                                        <th>Toplam KDV Tutar</th>
                                        <th>Toplam KDV Hariç Tutar</th>
                                        <th>Toplam KDV Dahil Tutar</th>
                                        <th>Aktif mi?</th>
                                    </tr>
                                </thead>
                                @foreach(var item in Model.SiparisDetay)
                                {
                            <tr>
                                <td><img style="max-height:50px;max-width:50px" src="@item.ResimBase64" /></td>
                                <td>@item.UrunId</td>
                                <td>@item.UrunAdi</td>
                                <td>@item.Adet</td>
                                <td>@item.HesaplananBirimKdvTutar</td>
                                <td>@item.HesaplananBirimKdvHaricTutar</td>
                                <td>@item.HesaplananBirimKdvDahilTutar</td>
                                <td>@item.HesaplananKdvTutar</td>
                                <td>@item.HesaplananKdvHaricTutar</td>
                                <td>@item.HesaplananKdvDahilTutar</td>
                                <td><input asp-for="@item.AktifMi" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" onfocus="javascript: siparisDetayDurum(@item.SiparisDetayId);" /></td>
                            </tr>
                                }
                                
                            </table>

