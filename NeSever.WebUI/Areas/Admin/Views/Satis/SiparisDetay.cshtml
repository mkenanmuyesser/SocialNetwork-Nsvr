                                            </tr>
                                        </thead>
                                        <tr>
                                            <td>Adres Adı</td>
                                            <td><input type="text" class="form-control datatable-input" placeholder="" asp-for="@Model.GonderimAdresi.AdresAdi" readonly /></td>
