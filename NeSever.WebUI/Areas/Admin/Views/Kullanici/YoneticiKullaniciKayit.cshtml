@model NeSever.Common.Models.Admin.KayitVM.YoneticiKullaniciKayitVM
@{var yoneticiKullaniciGirisVM = ViewBag.KullaniciGirisData as YoneticiKullaniciGirisVM; }
@{
    ViewData["Title"] = "YoneticiKullaniciKayit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-row flex-column-fluid container">
    <div class="main d-flex flex-column flex-row-fluid">
        <div class="subheader py-2 py-lg-4 subheader-transparent" id="kt_subheader">
            <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                <div class="d-flex align-items-center flex-wrap mr-1">
                    <div class="d-flex align-items-baseline flex-wrap mr-5">
                        <h5 class="text-dark font-weight-bold my-1 mr-5">Kullanici Kayıt</h5>

                        <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                            <li class="breadcrumb-item">
                                <a href="/Admin/Kullanici" class="text-muted">Kullanıcı</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/Admin/Kullanici/YoneticiKullaniciKayit" class="text-muted">Kullanici Kayıt</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <a href="/Admin/Kullanici/YoneticiKullaniciKayit" class="btn btn-icon btn-circle btn-sm btn-light-success mr-1" data-card-tool="reload">
                        <i class="ki ki-reload icon-nm"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="content flex-column-fluid" id="kt_content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header">
                            <h3 class="card-title">Kayıt Alanları</h3>
                            <div class="card-toolbar">
                                <div class="example-tools justify-content-center">
                                    <span class="example-copy" data-toggle="tooltip" title="Copy code" style="visibility:hidden"></span>
                                </div>
                            </div>
                        </div>
                        <form id="_form" class="form">
                            <input asp-for="@Model.YoneticiKullaniciId" type="hidden" />
                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label><span class="text-danger">* </span>E-posta:</label>
                                        <div class="input-group">
                                            @if (Model.YoneticiKullaniciId > 0)
                                            {
                                                <input asp-for="@Model.Eposta" type="text" class="form-control" disabled />
                                            }
                                            else
                                            {
                                                <input asp-for="@Model.Eposta" type="text" class="form-control" />
                                            }
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="la la-bookmark-o"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label><span class="text-danger">* </span>Şifre:</label>
                                        <div class="input-group">
                                            <input asp-for="@Model.Sifre" type="password" class="form-control" />
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <i class="la la-bookmark-o"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label>Aktif Mi?:</label>
                                        <div class="input-group">
                                            <input asp-for="@Model.AktifMi" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-lg-6">
                                        @if (Model.YoneticiKullaniciId > 0)
                                        {
                                            <button id="btnGuncelle" type="submit" class="btn btn-success mr-2">Güncelle</button>
                                        }
                                        else
                                        {
                                            <button id="btnKaydet" type="submit" class="btn btn-primary mr-2">Kaydet</button>
                                        }
                                        <button type="button" class="btn btn-secondary" onclick='location.reload();'>İptal</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{   
    <script src="/Themes/Admin/dist/assets/js/pages/crud/forms/widgets/bootstrap-switch.js?v=7.0.5"></script>

    <script type="text/javascript">
        $(document).ready(function () {

        });

        FormValidation.formValidation(document.getElementById('_form'),
            {
                fields: {
                    Eposta: {
                        validators: {
                            notEmpty: {
                                message: 'Zorunlu Alan.'
                            },
                            stringLength: {
                                max: 50,
                                message: 'Karakter Sınırı Aşıldı.'
                            },
                            emailAddress: {
                                message: 'Yanlış E-posta Formatı.'
                            }
                        }
                    },
                    Sifre: {
                        validators: {
                            notEmpty: {
                                message: 'Zorunlu Alan.'
                            },
                            stringLength: {
                                max: 50,
                                message: 'Karakter Sınırı Aşıldı.'
                            }
                        }
                    },
                },
                plugins: {
                    submitButton: new FormValidation.plugins.SubmitButton(),
                    bootstrap: new FormValidation.plugins.Bootstrap({
                        eleInvalidClass: '',
                        eleValidClass: '',
                    })
                }
            }).on('core.form.valid', function () {
                var data = $("#_form").serialize();

                $.ajax({
                    type: "post",
                    url: "/Admin/Kullanici/YoneticiKullaniciKayit",
                    data: data,
                    beforeSend: function () {
                        showLoading('_form');
                    },
                    success: function (result) {
                        hideLoading('_form');

                        if (result.message == "control") {
                            Swal.fire({
                                icon: 'warning',
                                title: 'İşlem Yapılamıyor!',
                                text: 'Aynı E-posta Kaydı Bulunmaktadır.',
                                showCloseButton: true,
                                confirmButtonText: "Tamam",
                                cancelButtonText: "İptal",
                            });
                        }
                        else {
                            if (result.id > 0) {
                                $('#YoneticiKullaniciId').val(result.id);

                                if (result.operation == "insert") {
                                    $('#Eposta').attr('disabled', 'disabled');
                                    $("#btnKaydet").removeClass('btn-primary');
                                    $("#btnKaydet").addClass('btn-success');
                                    $("#btnKaydet").html('Güncelle');
                                    window.history.pushState("", "", "YoneticiKullaniciKayit/" + result.id);
                                }

                                Swal.fire({
                                    icon: 'success',
                                    title: 'İşlem Başarılı!',
                                    text: '',
                                    showCloseButton: true,
                                    confirmButtonText: "Tamam",
                                    cancelButtonText: "İptal",
                                });
                            }
                            else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'İşlem Sırasında Hata Oluştu!',
                                    text: '',
                                    showCloseButton: true,
                                    confirmButtonText: "Tamam",
                                    cancelButtonText: "İptal",
                                });
                            }
                        }
                    },
                    error: function (err) {
                        hideLoading('_form');

                        Swal.fire(
                            "Hata",
                            "İşlem sırasında hata oluştu. " + err,
                            "error"
                        )
                    }
                });
            });

        function showLoading(id) {
            KTApp.block(document.getElementById(id), {
                overlayColor: '#000000',
                state: 'danger',
                message: 'Lütfen bekleyin...'
            });
        };

        function hideLoading(id) {
            KTApp.unblock(document.getElementById(id));
        };
    </script>
}