@{
    ViewData["Title"] = "CacheTemizleme";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model NeSever.Common.Models.Sistem.CacheTemizleme

<style>
    .ck-content {
        min-height: 300px !important;
        max-height: 300px !important;
    }
</style>

<div class="d-flex flex-row flex-column-fluid container">
    <div class="main d-flex flex-column flex-row-fluid">
        <div class="subheader py-2 py-lg-4 subheader-transparent" id="kt_subheader">
            <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                <div class="d-flex align-items-center flex-wrap mr-1">
                    <div class="d-flex align-items-baseline flex-wrap mr-5">
                        <h5 class="text-dark font-weight-bold my-1 mr-5">Cache Temizleme</h5>

                    </div>
                </div>
            </div>
        </div>


        <div class="content flex-column-fluid" id="kt_content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-custom gutter-b example example-compact">
                        <form id="_form" method="post">
                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col-lg-3">
                                        <label>Banner İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="BannerIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Blog Kategori İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="BlogKategoriIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Hediye Kart İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="HediyeKartIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Kategori Banner İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="KategoriBannerIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Kategori İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="KategoriIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Marka Listesi:</label>
                                        <div class="input-group">
                                            <input asp-for="MarkaList" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Marka İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="MarkaIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Ürün İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="UrunIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Kadın Ürün İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="KadinUrunIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <label>Erkek Ürün İçerik:</label>
                                        <div class="input-group">
                                            <input asp-for="ErkekUrunIcerik" data-switch="true" type="checkbox" data-on-color="success" data-off-color="danger" data-on-text="Evet" data-off-text="Hayır" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <button type="button" onclick="guncelle()" class="btn btn-success mr-2">Güncelle</button>
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="/Themes/Admin/dist/assets/plugins/custom/ckeditor/ckeditor-classic.bundle.js?v=7.0.5"></script>
    <script src="/Themes/Admin/dist/assets/js/pages/crud/forms/widgets/bootstrap-switch.js?v=7.0.5"></script>
    <script src="/Themes/Admin/dist/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js?v=7.0.5"></script>
    <script type="text/javascript">

            function guncelle() {
                var data = new FormData($('#_form')[0]);
                $.ajax({
                    url: '/Admin/Sistem/CacheTemizleme',
                    data: data,
                    type: "Post",
                    contentType: false,
                    processData: false,
                    success: function (result) {
                        Swal.fire({
                            title: 'İşlem Başarılı!',
                            text: "Cache Temizlendi!",
                            icon: 'success',
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Kapat'
                        });                 

                        $('#BannerIcerik').prop('checked', false).change()
                        $('#BlogKategoriIcerik').prop('checked', false).change()
                        $('#HediyeKartIcerik').prop('checked', false).change()
                        $('#KategoriBannerIcerik').prop('checked', false).change()
                        $('#KategoriIcerik').prop('checked', false).change()
                        $('#MarkaList').prop('checked', false).change()
                        $('#MarkaIcerik').prop('checked', false).change()
                        $('#UrunIcerik').prop('checked', false).change()
                        $('#KadinUrunIcerik').prop('checked', false).change()
                        $('#ErkekUrunIcerik').prop('checked', false).change()
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        Swal.fire({
                            title: 'İşlem Başarısız!',
                            text: "Cache Temizlenemedi!",
                            icon: 'warning',
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Kapat'
                        }); 
                    }
                });
            }

    </script>

}
