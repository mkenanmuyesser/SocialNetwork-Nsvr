@section Scripts{
    <script src="/Themes/Admin/dist/assets/plugins/custom/datatables/datatables.bundle.js?v=7.0.5"></script>
    <script src="/Themes/Admin/dist/assets/js/pages/crud/datatables/search-options/advanced-search.js?v=7.0.5"></script>
<script>
    function Ara() {

        var sendData = $('#_formAra').serializeObject();
        $('#dtArama').DataTable().destroy();

        var table = $('#dtArama').DataTable({
            processing: true,
            serverSide: true,
            filter: false,
            responsive: true,
            orderMulti: false,
            autoWidth: false,
            ordering: false,
            //fixedColumns: true,
            //deferRender: true,
            ajax: {

                url: "/Admin/DataAktarim/AramaSonuclariniGetir",
                type: "POST",

                dataType: "json",
                data: sendData,
                beforeSend: function () {
                    //showLoading();
                },
                complete: function () {
                    //hideLoading();
                },
                error: function (error) {
                    //hideLoading();
                    alert(error);
                }
            },

            columns: [

                { data: 'WebSiteId', defaultContent: '' },
                { data: 'Resim', defaultContent: '' },
                { data: 'WebSiteAdi', defaultContent: '' },
                { data: 'WebSiteUrl', defaultContent: '' },
                { data: 'Durum', defaultContent: '' },
                { data: 'WebSiteId', defaultContent: '' }


            ],
            fixedColumns: true,
            columnDefs: [
                { targets: 0, width: '5%' },
                {
                    targets: 1, width: '5%', "render": function (data) {

                        if (data != null)
                            return '<img style="max-height:200px;max-width:150px"  src="data:image/png;base64,' + data + '" />';
                        else
                            return '<img src="../../Themes/Admin/design/noimage.png" id="emptyFile" style="max-height:200px;max-width:150px" />';

                    },
                },
                { targets: 2, width: '5%' },
                { targets: 3, width: '5%' },
                {
                    targets: 4, responsivePriority: 1, width: "5%", render: function (data, type, row, meta) {
                      
                        if (data == "Pasif") {
                            return "<span class='label label - lg font - weight - bold label - light - danger label - inline'>"+data+"</span>";
                        }
                        else if (data == "Aktif") {
                            return "<span class='label label - lg font - weight - bold label - light - success label - inline'>"+data+"</span>";
                        }
                    } },
                {
                    targets: 5, responsivePriority: 1, width: "10%", render: function (data, type, row, meta) {
                        var DurumValue = row['Durum']; 
                        if (DurumValue == "Pasif") {
                            return "<div class='list-icons'>" +
                                "<a href = '#' style='float:left' data-toggle='tooltip' data-placement='bottom' title='Aktife Al'  onClick='javascript: DurumGuncelle(" + data + "); ' class='btn  btn-icon-only yellow'>Aktife Al</a>" +

                                "</div>";
                        }
                        else if (DurumValue == "Aktif") {
                            return "<div class='list-icons'>" +
                                "<a href = '#' style='float:left' data-toggle='tooltip' data-placement='bottom' title='Pasife Al'  onClick='javascript: DurumGuncelle(" + data + "); ' class='btn  btn-icon-only yellow'>Pasife Al</a>" +

                                "</div>";
                        }
                    }
                },

                //{ targets: 1, width: '10%' },
            ],
            dom: `<'row'<'col-sm-6 text-left'f><'col-sm-6 text-right'B>>
                <'row'<'col-sm-12'tr>>
                <'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 dataTables_pager'lp>>`,
            lengthMenu: [[5, 25, 50], [5, 25, 50]],
            buttons: [
                {
                    extend: 'print',
                    text: 'Yazdır'
                },
                {
                    extend: 'excelHtml5',
                    text: 'Excel'
                },
                {
                    extend: 'pdfHtml5',
                    text: 'Pdf'
                }
            ],
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json'
            }
        });

    }

    function Temizle() {

        $('#WebSiteId').val('');
        $('#WebSiteAdi').val('');
        $('#SiteUrl').val('');
        $('#AktifRadioButton').prop("checked", true);
    

    }
    function DurumGuncelle(Id) {
        event.preventDefault();
        var webSiteId = Id;

        Swal.fire({
            title: 'Emin misiniz?',
            text: "Durum Güncellenecek",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Güncelle',
            cancelButtonText: "Vazgeç",
            }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/Admin/DataAktarim/DurumGuncelle',
                    data: { id: webSiteId },
                    type: "Post",
                    success: function (result) {

                        $('#dtArama').DataTable().ajax.reload();
                        Swal.fire("İşlem Başarılı!", "Güncelleme tamamlandı!", "success");

                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert(xhr.status);
                        alert(thrownError);
                    }
                });
            }
        })




    }
</script>
