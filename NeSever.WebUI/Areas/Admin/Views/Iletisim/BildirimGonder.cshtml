@{
    ViewData["Title"] = "BildirimGonder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model NeSever.Common.Models.Uyelik.IletisimTopluBildirimVM


<div class="d-flex flex-row flex-column-fluid container">
    <div class="main d-flex flex-column flex-row-fluid">
        <div class="subheader py-2 py-lg-4 subheader-transparent" id="kt_subheader">
            <div class="container d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
                <div class="d-flex align-items-center flex-wrap mr-1">
                    <div class="d-flex align-items-baseline flex-wrap mr-5">
                        <h5 class="text-dark font-weight-bold my-1 mr-5">Toplu Bildirim Gönder</h5>

                        <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                            <li class="breadcrumb-item">
                                <a href="/Admin/Iletisim" class="text-muted">İletişim</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="javascript:;" class="text-muted">Toplu Bildirim İşlemleri</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/Admin/Iletisim/BildirimGonder" class="text-muted">Toplu Bildirim Gönder</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <a href="#" class="btn btn-icon btn-circle btn-sm btn-light-success mr-1" data-card-tool="reload" onclick="loadPage()">
                        <i class="ki ki-reload icon-nm"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="content flex-column-fluid" id="kt_content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-custom gutter-b example example-compact">
                        <div class="card-header">
                            <h3 class="card-title">Kayıt Alanları</h3>
                            <div class="card-toolbar">
                                <div class="example-tools justify-content-center">
                                    <span class="example-copy" data-toggle="tooltip" title="" style="visibility:hidden"></span>
                                </div>
                            </div>
                        </div>
                        <form id="_myform" method="post">
                            <input id="hdnBildirimId" type="hidden" value="@Model.BildirimId" />
                            <div class="card-body">
                                <div class="form-group row">
                                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                                        <div class="form-group label-floating is-select">
                                            <label class="control-label">Cinsiyet</label>
                                            <select asp-for="Cinsiyet" class="form-control">
                                                <option value="">Tümü</option>
                                                <option value="K">Kadın</option>
                                                <option value="E">Erkek</option>
                                                <option value="B">Belirtilmemiş</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col col-lg-6 col-md-6 col-sm-12 col-12">
                                        <div class="form-group label-floating is-select">
                                            <label class="control-label">İlişki Durumu</label>
                                            <select asp-for="IliskiDurumu" class="selectpicker form-control">
                                                <option value="">Tümü</option>
                                                <option value="BI">Belirtmek İstemiyor</option>
                                                <option value="E">Evli</option>
                                                <option value="B">Bekar</option>
                                                <option value="N">Nişanlı</option>
                                                <option value="S">Sözlü</option>
                                                <option value="YCM">Yalnız Çok Mutlu</option>
                                                <option value="AA">Arkadaş Arıyor</option>
                                                <option value="IV">İlişkisi Var</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-6">
                                        <label>Bildirim Metni:</label>
                                        <div class="input-group border">
                                            <textarea id="Aciklama" asp-for="BildirimIcerik"></textarea>
                                        </div>
                                    </div>
                                </div>

                                </div>

                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-lg-6">
                                        @if (Model.BildirimId > 0)
                                        {
                                            <button id="btnGuncelle" type="submit" class="btn btn-success mr-2">Güncelle</button>
                                        }
                                        else
                                        {
                                            <button id="btnKaydet" type="submit" class="btn btn-primary mr-2">Kaydet</button>
                                        }
                                        <button type="button" class="btn btn-secondary" onclick='location.reload();'>İptal</button>

                                    </div>

                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="/Themes/Admin/dist/assets/plugins/custom/ckeditor/ckeditor-classic.bundle.js?v=7.0.5"></script>
    <script src="/Themes/Admin/dist/assets/js/pages/crud/forms/widgets/bootstrap-switch.js?v=7.0.5"></script>
    <script src="/Themes/Admin/dist/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js?v=7.0.5"></script>

    <script type="text/javascript">
        FormValidation.formValidation(document.getElementById('_myform'),
            {

                fields: {

                },
                plugins: {
                    submitButton: new FormValidation.plugins.SubmitButton(),
                    bootstrap: new FormValidation.plugins.Bootstrap({
                        eleInvalidClass: '',
                        eleValidClass: '',
                    })
                }
            }

        ).on('core.form.valid', function () {
            var data = new FormData($('#_myform')[0]);

            data.append('BildirimId', $('#hdnBildirimId').val());
            data.append('AciklamaContent', Aciklama.getData());

            $.ajax({
                type: "post",
                url: "/Admin/Iletisim/BildirimSayisiGetir",
                data: data,
                contentType: false,
                processData: false,
                success: function (result) {
                    Swal.fire({
                        title: 'Emin misiniz?',
                        text: result + " kişiye gönderilecek.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Gönder',
                        cancelButtonText: "Vazgeç",
                    }).then((result) => {
                        if (result.value) {
                            $.ajax({
                                type: "post",
                                url: "/Admin/Iletisim/BildirimGonder",
                                data: data,
                                contentType: false,
                                processData: false,
                                beforeSend: function () {
                                    showLoading('_myform');
                                },
                                success: function (result) {
                                    hideLoading('_myform');


                                    if (result.id > 0) {
                                        $('#hdnBildirimId').val(result.id);

                                        if (result.operation == "insert") {
                                            $("#btnKaydet").removeClass('btn-primary');
                                            $("#btnKaydet").addClass('btn-success');
                                            $("#btnKaydet").html('Güncelle');
                                            window.history.pushState("", "", "Kayit/" + result.id);
                                        }

                                        Swal.fire({
                                            icon: 'success',
                                            title: 'İşlem Başarılı!',
                                            text: '',
                                            showCloseButton: true,
                                            confirmButtonText: "Tamam",
                                            cancelButtonText: "İptal",
                                        });
                                    }
                                    else {
                                        Swal.fire({
                                            icon: 'warning',
                                            title: 'Böyle bir kullanıcı bulunamadı!',
                                            text: '',
                                            showCloseButton: true,
                                            confirmButtonText: "Tamam",
                                            cancelButtonText: "İptal",
                                        });
                                    }
                                },

                                error: function (err) {
                                    hideLoading('_myform');

                                    Swal.fire(
                                        "Hata",
                                        "İşlem sırasında hata oluştu. " + err,
                                        "error"
                                    );
                                }
                            });
                        }
                    });
                },
                error: function (err) {
                    hideLoading('_myform');

                    Swal.fire(
                        "Hata",
                        "İşlem sırasında hata oluştu. " + err,
                        "error"
                    );
                }
            });          
        });
        
        var KTCkeditor1 = function () {
            //Private functions
            var demos = function () {
                ClassicEditor
                    .create(document.querySelector('#Aciklama'))
                    .then(editor => {
                        Aciklama = editor;
                    })
                    .catch(err => {
                        console.error(err.stack);
                    });
            }

            return {
                // public functions
                init: function () {
                    demos();
                }
            };
        }();
        function loadPage() {
            location.reload();
        }
        function showLoading(id) {
            KTApp.block(document.getElementById(id), {
                overlayColor: '#000000',
                state: 'danger',
                message: 'Lütfen bekleyin...'
            });
        };
        function hideLoading(id) {
            KTApp.unblock(document.getElementById(id));
        };
        jQuery(document).ready(function () {

            KTCkeditor1.init();

        });
    </script>
}