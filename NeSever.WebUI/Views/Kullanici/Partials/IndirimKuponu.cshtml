@model List<NeSever.Common.Models.Sayfa.IndirimKuponuAramaResultVM>

@if (Model.Count() == 0 || Model == null)
{
    <div class="ui-block">
        <div class="ui-block-title">
            <h6 class="title">İndirim Kuponları</h6>
        </div>

        <ul class="notification-list friend-requests">
            <li>
                <div class="notification-event">
                    İndirim Kuponu Bulunmamaktadır...
                </div>
            </li>
        </ul>
    </div>
}
else {

@foreach (var kupon in Model)
{
    @if (string.IsNullOrEmpty(kupon.Link))
    {
        <img src="data:image/png;base64,@kupon.ResimBase64" alt="@kupon.Aciklama" />
    }
    else
    {
        if (kupon.Link.Contains("nesever"))
        {
            <a href="@kupon.Link">
                <img src="data:image/png;base64,@kupon.ResimBase64" alt="@kupon.Aciklama" />
            </a>
        }
        else
        {
            <a href="@kupon.Link" target="_blank">
                <img src="data:image/png;base64,@kupon.ResimBase64" alt="@kupon.Aciklama" />
            </a>
        }
    }
}

}